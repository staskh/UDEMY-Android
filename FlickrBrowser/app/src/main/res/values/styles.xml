<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="AppTheme">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/flickrPrimaryBackground</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/flickrSecondaryBackground</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
                which is used to tint widgets -->
        <item name="colorAccent">@color/flickrAccentBackground</item>
        <!-- You can also set colorControlNormal, colorControlActivated
                colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="android:windowBackground">@color/flickrBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Flickr" parent="AppTheme.Base"></style>
</resources>
